# Production Service Development Environment Variables
# Copy this file to .env for local development

# REQUIRED CONFIGURATION
# Database connection
PROD_SVC_DATABASE_URL=postgresql://slcw_user:dev_password_2024@localhost:5432/shard_legends_dev?sslmode=disable

# Redis connections
PROD_SVC_REDIS_URL=redis://localhost:6379/2
PROD_SVC_REDIS_AUTH_URL=redis://localhost:6379/0

# Server configuration
PROD_SVC_SERVER_HOST=0.0.0.0
PROD_SVC_SERVER_PORT=8080
PROD_SVC_SERVER_INTERNAL_PORT=8081

# Authentication
PROD_SVC_AUTH_PUBLIC_KEY_URL=http://localhost:8080/public-key.pem

# External services
PROD_SVC_EXTERNAL_SERVICES_INVENTORY_SERVICE_BASE_URL=http://localhost:8081
PROD_SVC_EXTERNAL_SERVICES_USER_SERVICE_BASE_URL=http://localhost:8082

# OPTIONAL CONFIGURATION (with development-friendly defaults)
# Database
PROD_SVC_DATABASE_MAX_CONNECTIONS=10
PROD_SVC_DATABASE_MAX_IDLE_TIME=5m
PROD_SVC_DATABASE_HEALTH_CHECK_PERIOD=1m
PROD_SVC_DATABASE_PING_TIMEOUT=5s

# Redis
PROD_SVC_REDIS_MAX_CONNECTIONS=5
PROD_SVC_REDIS_READ_TIMEOUT=3s
PROD_SVC_REDIS_WRITE_TIMEOUT=3s
PROD_SVC_REDIS_MAX_RETRIES=3
PROD_SVC_REDIS_PING_TIMEOUT=2s

# Server timeouts
PROD_SVC_SERVER_READ_TIMEOUT=15s
PROD_SVC_SERVER_WRITE_TIMEOUT=15s
PROD_SVC_SERVER_IDLE_TIMEOUT=60s

# Authentication
PROD_SVC_AUTH_CACHE_TTL=1h
PROD_SVC_AUTH_REFRESH_INTERVAL=24h

# Logging
PROD_SVC_LOGGING_LEVEL=debug

# External service timeouts
PROD_SVC_EXTERNAL_SERVICES_INVENTORY_SERVICE_TIMEOUT=10s
PROD_SVC_EXTERNAL_SERVICES_USER_SERVICE_TIMEOUT=5s

# Application timeouts
PROD_SVC_TIMEOUTS_HTTP_MIDDLEWARE=60s
PROD_SVC_TIMEOUTS_JWT_VALIDATOR_CLIENT=10s
PROD_SVC_TIMEOUTS_GRACEFUL_SHUTDOWN=30s
PROD_SVC_TIMEOUTS_DATABASE_HEALTH=2s
PROD_SVC_TIMEOUTS_REDIS_HEALTH=2s

# Background cleanup (faster for development)
PROD_SVC_CLEANUP_ORPHANED_TASK_TIMEOUT=2m
PROD_SVC_CLEANUP_CLEANUP_INTERVAL=1m
PROD_SVC_CLEANUP_CLEANUP_TIMEOUT=5m

# Metrics
PROD_SVC_METRICS_UPDATE_INTERVAL=10s

# Development Notes:
# - Use shorter timeouts for faster development feedback
# - Lower connection limits for resource conservation
# - Debug logging enabled for troubleshooting
# - Faster cleanup intervals to test background processes